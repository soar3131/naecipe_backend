# ==============================================================================
# 내시피(Naecipe) 백엔드 환경 변수 템플릿
# ==============================================================================
# 이 파일을 .env로 복사하여 로컬 개발에 사용하세요.
# cp .env.example .env
# ==============================================================================

# ------------------------------------------------------------------------------
# 공통 설정
# ------------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# ------------------------------------------------------------------------------
# 데이터베이스 (PostgreSQL)
# ------------------------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=naecipe
DATABASE_PASSWORD=naecipe_dev_password
DATABASE_NAME=naecipe
DATABASE_URL=postgresql+asyncpg://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ------------------------------------------------------------------------------
# Redis
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ------------------------------------------------------------------------------
# Elasticsearch
# ------------------------------------------------------------------------------
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://${ELASTICSEARCH_HOST}:${ELASTICSEARCH_PORT}

# ------------------------------------------------------------------------------
# Kafka
# ------------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_PREFIX=naecipe

# ------------------------------------------------------------------------------
# 서비스별 포트
# ------------------------------------------------------------------------------
RECIPE_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
COOKBOOK_SERVICE_PORT=8003
AI_AGENT_SERVICE_PORT=8004
EMBEDDING_SERVICE_PORT=8005
SEARCH_SERVICE_PORT=8006
NOTIFICATION_SERVICE_PORT=8007
ANALYTICS_SERVICE_PORT=8008
INGESTION_SERVICE_PORT=8009

# ------------------------------------------------------------------------------
# 보안 (프로덕션에서는 반드시 변경)
# ------------------------------------------------------------------------------
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ------------------------------------------------------------------------------
# AI/LLM 설정 (필요시)
# ------------------------------------------------------------------------------
# OPENAI_API_KEY=sk-xxx
# ANTHROPIC_API_KEY=sk-ant-xxx
